// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// PRODUCTO (cada cerveza que vendes)
model Product {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Informaci贸n b谩sica
  name        String               // "El Clan IPA"
  slug        String   @unique     // "el-clan-ipa" (para URLs)
  description String               // Descripci贸n detallada
  price       Float                // 850.00
  
  // Informaci贸n cervecera espec铆fica
  beerType    String               // "IPA", "Lager", "Stout"
  ibu         Int?                 // Amargor (International Bitterness Units)
  abv         Float                // Alcohol por volumen
  measure     String               // "330ml", "500ml", "1L"
  
  // Control de inventario
  stock       Int      @default(0) // Cantidad disponible
  isActive    Boolean  @default(true) // 驴Est谩 a la venta?
  
  // Metadata
  imageUrl    String?              // URL de la imagen
  pairing     String?              // Maridaje recomendado
  
  // RELACIONES
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]          // En qu茅 pedidos aparece
  
  @@map("products") // Nombre de tabla en BD
}

// CATEGORA (tipos de cerveza)
model Category {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  name        String    @unique    // "IPA", "Lager"
  slug        String    @unique    // "ipa", "lager"
  description String?              // Descripci贸n de la categor铆a
  
  // RELACIONES
  products    Product[]            // Productos de esta categor铆a
  
  @@map("categories")
}

// CLIENTE (quien compra)
model Customer {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Informaci贸n personal
  name      String
  email     String?  @unique
  phone     String   @unique      // Principal forma de contacto
  address   String?              // Direcci贸n de entrega
  
  // Geolocalizaci贸n (para delivery)
  latitude  Float?
  longitude Float?
  
  // Vinculaci贸n con usuario registrado (opcional)
  userId    String?  @unique     // ID de Supabase Auth
  
  //  RELACIONES
  orders    Order[]              // Pedidos de este cliente
  
  @@map("customers")
}

// PEDIDO (cada compra)
model Order {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Estado del pedido
  status      OrderStatus @default(PENDING)
  
  // Informaci贸n del pedido
  total       Float                // Monto total
  notes       String?              // Notas del cliente
  
  // Informaci贸n del cliente (relaci贸n)
  customerId  String
  customer    Customer  @relation(fields: [customerId], references: [id])
  
  //  RELACIONES
  items       OrderItem[]          // Productos en este pedido
  
  // Tracking de WhatsApp
  whatsappSent Boolean @default(false)
  whatsappSentAt DateTime?
  
  // Control de pedidos abandonados
  expiresAt   DateTime? // Se elimina si no se confirma
  
  @@map("orders")
}

// ITEM DE PEDIDO (cada producto dentro de un pedido)
model OrderItem {
  id        String  @id @default(cuid())
  
  quantity  Int                  // 驴Cu谩ntos?
  price     Float                // Precio al momento del pedido
  
  //  RELACIONES
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  @@map("order_items")
}

// USUARIO ADMIN (quien gestiona el CMS)
model AdminUser {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String   @unique     // ID de Supabase Auth
  email     String   @unique
  role      AdminRole @default(ADMIN)
  isActive  Boolean   @default(true)
  
  @@map("admin_users")
}

// EVENTOS DE ANALYTICS (para m茅tricas)
model AnalyticsEvent {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  eventName String               // "product_view", "add_to_cart"
  eventData Json?                // Datos adicionales
  sessionId String?              // Sesi贸n del usuario
  userId    String?              // Usuario si est谩 logueado
  
  @@map("analytics_events")
}

// ENUMS (valores predefinidos)
enum OrderStatus {
  PENDING      // Pedido creado, esperando confirmaci贸n
  CONFIRMED    // Confirmado por WhatsApp
  PREPARING    // En preparaci贸n
  READY        // Listo para entrega
  DELIVERED    // Entregado
  CANCELLED    // Cancelado
  ABANDONED    // Abandonado (no confirmado)
}

enum AdminRole {
  SUPER_ADMIN  // Puede todo
  ADMIN        // Gestiona productos y pedidos
  VIEWER       // Solo ve informaci贸n
}